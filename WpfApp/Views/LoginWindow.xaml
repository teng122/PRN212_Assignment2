<!-- File: Views/LoginWindow.xaml -->
<Window x:Class="HotelManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Hotel System - Login" Height="350" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#F5F5F5">
        <Border Height="334" Background="White" 
                CornerRadius="10" VerticalAlignment="Center" Margin="10,0,10,0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="30">
                <TextBlock Text="FU Mini Hotel System" 
                          FontSize="24" FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2196F3" Margin="0,0,0,20"/>

                <TextBlock Text="Email Address" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" 
                        Text="admin@FUMiniHotelSystem.com"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="35" 
                            KeyDown="txtPassword_KeyDown"/>

                <Button x:Name="btnLogin" Content="Login" Height="40" Margin="0,20,0,0"
                       Background="#2196F3" Foreground="White"
                       FontWeight="SemiBold" FontSize="16"
                       Click="btnLogin_Click"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1976D2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock x:Name="txtError" Foreground="Red" 
                          HorizontalAlignment="Center" 
                          Margin="0,10,0,0" TextWrapping="Wrap"
                          FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>