<!-- File: Views/RoomDialog.xaml -->
<Window x:Class="HotelManager.Views.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Information" Height="700" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20,20,20,160">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Room Number:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="0" x:Name="txtRoomNumber" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="1" Text="Description:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="txtDescription" Height="70" 
                TextWrapping="Wrap" AcceptsReturn="True" 
                VerticalScrollBarVisibility="Auto" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="2" Text="Max Capacity:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="2" x:Name="txtMaxCapacity" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="3" Text="Price Per Date (VND):" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="3" x:Name="txtPrice" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="4" Text="Room Type:" FontWeight="SemiBold" Margin="0,5"/>
        <ComboBox Grid.Row="4" x:Name="cmbRoomType" Height="35" 
                 DisplayMemberPath="RoomTypeName" 
                 SelectedValuePath="RoomTypeID" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="5" Text="Status:" FontWeight="SemiBold" Margin="0,5"/>
        <ComboBox Grid.Row="5" x:Name="cmbStatus" Height="35" Margin="0,25,0,5">
            <ComboBoxItem Content="Active" Tag="1"/>
            <ComboBoxItem Content="Deleted" Tag="2"/>
        </ComboBox>

        <StackPanel Grid.Row="8" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Height="40"
                   Background="#4CAF50" Foreground="White"
                   Click="btnSave_Click"/>
            <Button Content="Cancel" Width="100" Height="40"
                   Background="#F44336" Foreground="White"
                   Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>