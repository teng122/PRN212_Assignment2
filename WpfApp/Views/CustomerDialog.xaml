<!-- File: Views/CustomerDialog.xaml -->
<Window x:Class="HotelManager.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Information" Height="700" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Full Name:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="0" x:Name="txtFullName" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="1" Text="Telephone:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="txtTelephone" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="2" Text="Email Address:" FontWeight="SemiBold" Margin="0,5"/>
        <TextBox Grid.Row="2" x:Name="txtEmail" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="3" Text="Birthday:" FontWeight="SemiBold" Margin="0,5"/>
        <DatePicker Grid.Row="3" x:Name="dpBirthday" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="4" Text="Password:" FontWeight="SemiBold" Margin="0,5"/>
        <PasswordBox Grid.Row="4" x:Name="txtPassword" Height="35" Margin="0,25,0,5"/>

        <TextBlock Grid.Row="5" Text="Status:" FontWeight="SemiBold" Margin="0,5"/>
        <ComboBox Grid.Row="5" x:Name="cmbStatus" Height="35" Margin="0,25,0,5">
            <ComboBoxItem Content="Active" Tag="1"/>
            <ComboBoxItem Content="Deleted" Tag="2"/>
        </ComboBox>

        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                   HorizontalAlignment="Left" Margin="228,48,0,171" Grid.RowSpan="2">
            <Button Content="Save" Width="100" Height="40"
                   Background="#4CAF50" Foreground="White"
                   Click="btnSave_Click"/>
            <Button Content="Cancel" Width="100" Height="40"
                   Background="#F44336" Foreground="White"
                   Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>